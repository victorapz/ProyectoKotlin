<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <!-- App Name -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="324dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:text="RecetasApp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Logo de la app"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Email Label -->
    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="316dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="Correo electrónico"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogin" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:hint="Ingresa tu correo"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@id/tvCorreo"
        app:layout_constraintStart_toStartOf="@id/tvCorreo"
        app:layout_constraintTop_toBottomOf="@id/tvCorreo" />

    <!-- Password Label -->
    <TextView
        android:id="@+id/tvContraseña"
        android:layout_width="314dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Contraseña"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="@id/etCorreo"
        app:layout_constraintStart_toStartOf="@id/etCorreo"
        app:layout_constraintTop_toBottomOf="@id/etCorreo" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/etContraseña"
        android:layout_width="291dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/tvContraseña"
        app:layout_constraintStart_toStartOf="@id/tvContraseña"
        app:layout_constraintTop_toBottomOf="@id/tvContraseña" />

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="144dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="Entrar"
        app:layout_constraintEnd_toEndOf="@id/etContraseña"
        app:layout_constraintStart_toStartOf="@id/etContraseña"
        app:layout_constraintTop_toBottomOf="@id/etContraseña" />

    <!-- Register Link -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtnRegister"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="@id/btnLogin"
        app:layout_constraintEnd_toEndOf="@id/btnLogin"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
